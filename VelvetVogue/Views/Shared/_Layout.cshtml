<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VelvetVogue</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VelvetVogue.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3">

            <div class="container">

                <!--brand name-->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">VelvetVogue</a>

                <!--Hamburger btn-->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#MainNav" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!--My code-->
                <div class="navbar-collapse collapse " id="MainNav">

                    <ul class="navbar-nav ms-auto gap-3">

                        <li class="nav-item NavBarTextAlignment">
                            <a class="text-decoration-none  NavBarTextColor" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item NavBarTextAlignment">
                            <a class="text-decoration-none  NavBarTextColor" asp-area="" asp-controller="Home" asp-action="Services">Services</a>
                        </li>

                        <li class="nav-item NavBarTextAlignment">
                            <a class="text-decoration-none NavBarTextColor NavBarTextAlignment" asp-area="" asp-controller="" asp-action="">About</a>
                        </li>

                        <li class="nav-item NavBarTextAlignment">
                            <a class="text-decoration-none NavBarTextColor" asp-area="" asp-controller="" asp-action="">Contact</a>
                        </li>

                        <!--Login || dropdown-->
                        <li class="nav-item dropdown NavBarTextAlignment" style="">
                           
                           
                            <a class="dropdown-toggle text-decoration-none" style="color:black;"  data-bs-toggle="dropdown"  >Admin</a>

                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item NavBarTextColor" style="color:black">Login</a>
                                </li>
                                <li>
                                    <a class="dropdown-item NavBarTextColor" style="color:black">Logout</a>
                                </li>
                                <li>
                                    <a class="dropdown-item NavBarTextColor" style="color:black">Login Configurations</a>
                                </li>
                            </ul>
                        </li>

                    </ul>


                </div>

            </div>

        </nav>
    </header>

    <div class="container">

        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>

    <footer class="border-top footer text-muted">

        <div class="container">
            &copy; 2025 - VelvetVogue - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>

    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
